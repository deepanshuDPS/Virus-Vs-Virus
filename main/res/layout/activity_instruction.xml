<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.Game.Rowdy.virusvsvirus.Instruction">

    <ImageView
        android:id="@+id/heading"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_span="3"
        android:background="@drawable/gamerule" />

    <TableLayout
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="300dp"
                    android:layout_height="420dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/instruction"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ins1"
                    android:layout_width="270dp"
                    android:layout_height="420dp"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/ins1" />

                <ImageView
                    android:id="@+id/ins2"
                    android:layout_width="270dp"
                    android:layout_height="420dp"
                    android:layout_column="2"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/ins2" />
            </TableRow>
        </HorizontalScrollView>
    </TableLayout>

    <TableLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp">

        <TableRow>

            <Button
                android:id="@+id/gotit"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_marginRight="15dp"
                android:background="@drawable/buttonshape"
                android:onClick="gotit"
                android:text="Ok, Got It"
                android:textColor="#808080"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/notgotit"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:background="@drawable/buttonshape"
                android:onClick="notGotIt"
                android:text="Not Got It"
                android:textColor="#808080"
                android:textSize="18dp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
